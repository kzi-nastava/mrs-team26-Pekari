<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Login Fragment - Start Destination -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.blackcar.presentation.auth.views.LoginFragment"
        android:label="@string/title_login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_login_to_forgot_password"
            app:destination="@id/forgotPasswordFragment" />

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.blackcar.presentation.auth.views.ForgotPasswordFragment"
        android:label="@string/title_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.blackcar.presentation.auth.views.RegisterFragment"
        android:label="@string/title_register"
        tools:layout="@layout/fragment_register" />

    <!-- Home Fragment - Landing Page -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.blackcar.presentation.home.views.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_passenger_history"
            app:destination="@id/passengerHistoryFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />

        <action
            android:id="@+id/action_home_to_driver_history"
            app:destination="@id/driverHistoryFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />

        <action
            android:id="@+id/action_home_to_admin_history"
            app:destination="@id/adminHistoryFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />

        <action
            android:id="@+id/action_home_to_add_driver"
            app:destination="@id/addDriverFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />

        <action
            android:id="@+id/action_home_to_user_management"
            app:destination="@id/userManagementFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />

        <action
            android:id="@+id/action_home_to_chat"
            app:destination="@id/chatFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />

        <action
            android:id="@+id/action_home_to_rideTracking"
            app:destination="@id/rideTrackingFragment" />
    </fragment>

    <!-- Ride Tracking Fragment -->
    <fragment
        android:id="@+id/rideTrackingFragment"
        android:name="com.example.blackcar.presentation.home.views.RideTrackingFragment"
        android:label="Ride Tracking"
        tools:layout="@layout/fragment_ride_tracking">
        <argument
            android:name="rideId"
            app:argType="long" />
    </fragment>

    <!-- Add Driver Fragment (Admin only) -->
    <fragment
        android:id="@+id/addDriverFragment"
        android:name="com.example.blackcar.presentation.admin.views.AddDriverFragment"
        android:label="@string/title_add_driver"
        tools:layout="@layout/fragment_add_driver" />

    <!-- User Management Fragment (Admin only) -->
    <fragment
        android:id="@+id/userManagementFragment"
        android:name="com.example.blackcar.presentation.admin.views.UserManagementFragment"
        android:label="@string/user_management_title"
        tools:layout="@layout/fragment_user_management" />

    <!-- Driver History Fragment -->
    <fragment
        android:id="@+id/driverHistoryFragment"
        android:name="com.example.blackcar.presentation.history.views.DriverHistoryFragment"
        android:label="@string/title_driver_history"
        tools:layout="@layout/fragment_driver_history" />

    <!-- Passenger History Fragment -->
    <fragment
        android:id="@+id/passengerHistoryFragment"
        android:name="com.example.blackcar.presentation.history.views.PassengerHistoryFragment"
        android:label="@string/title_passenger_history"
        tools:layout="@layout/fragment_passenger_history" />

    <!-- Admin History Fragment -->
    <fragment
        android:id="@+id/adminHistoryFragment"
        android:name="com.example.blackcar.presentation.history.views.AdminHistoryFragment"
        android:label="@string/title_admin_history"
        tools:layout="@layout/fragment_admin_history" />

    <!-- Profile Fragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.blackcar.presentation.profile.views.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profile_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_profile_to_user_management"
            app:destination="@id/userManagementFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <!-- Chat Fragment -->
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.blackcar.presentation.chat.ChatFragment"
        android:label="@string/title_chat"
        tools:layout="@layout/fragment_chat" />

    <!-- Panic Panel Fragment (Admin only) -->
    <fragment
        android:id="@+id/panicPanelFragment"
        android:name="com.example.blackcar.presentation.admin.views.PanicPanelFragment"
        android:label="@string/title_panic_panel"
        tools:layout="@layout/fragment_panic_panel" />

</navigation>