<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_primary">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driver_home_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <!-- Loading State -->
    <LinearLayout
        android:id="@+id/layoutLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driver_loading_ride"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Error State -->
    <LinearLayout
        android:id="@+id/layoutError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_error_card"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accent_danger"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            tools:text="Failed to load active ride" />

        <Button
            android:id="@+id/btnRetry"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driver_btn_retry" />
    </LinearLayout>

    <!-- No Active Ride State -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layoutNoRide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/card_surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/divider"
        app:strokeWidth="1dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/driver_no_active_ride"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/driver_no_active_ride_subtitle"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Active Ride Content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <ScrollView
        android:id="@+id/scrollActiveRide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:visibility="gone"
        android:paddingBottom="88dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="24dp">

            <!-- Active Ride Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/divider"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Stop Request Notification -->
                    <LinearLayout
                        android:id="@+id/layoutStopRequestNotification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_stop_request_notification"
                        android:padding="16dp"
                        android:layout_marginBottom="20dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/driver_stop_requested_title"
                            android:textColor="@color/stop_request_notification_title"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/driver_stop_requested_message"
                            android:textColor="@color/stop_request_notification_text"
                            android:textSize="14sp"
                            android:lineSpacingMultiplier="1.5" />
                    </LinearLayout>

                    <!-- Ride Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:id="@+id/txtRideTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="Active Ride #123" />

                        <TextView
                            android:id="@+id/txtStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="6dp"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:text="Assigned"
                            tools:background="@drawable/bg_status_accepted"
                            tools:textColor="@color/status_accepted" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginBottom="20dp" />

                    <!-- Route Information Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/driver_route_info"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.08"
                        android:layout_marginBottom="12dp" />

                    <!-- Pickup -->
                    <LinearLayout
                        android:id="@+id/layoutPickup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="14dp"
                        android:background="@drawable/bg_location_row"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŸ¢"
                            android:textSize="18sp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="2dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/driver_pickup"
                                android:textColor="@color/text_primary"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/txtPickupAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                tools:text="123 Main Street, City" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Stops Container -->
                    <LinearLayout
                        android:id="@+id/containerStops"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <!-- Dropoff -->
                    <LinearLayout
                        android:id="@+id/layoutDropoff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="14dp"
                        android:background="@drawable/bg_location_row"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”´"
                            android:textSize="18sp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="2dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/driver_dropoff"
                                android:textColor="@color/text_primary"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/txtDropoffAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                tools:text="456 Destination Ave, Town" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Ride Details Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/driver_ride_details"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.08"
                        android:layout_marginBottom="12dp" />

                    <!-- Info Grid -->
                    <LinearLayout
                        android:id="@+id/gridRideInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <!-- Row 1: Vehicle Type + Distance -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp">

                            <!-- Vehicle Type -->
                            <LinearLayout
                                android:id="@+id/itemVehicleType"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="14dp"
                                android:background="@drawable/bg_info_item"
                                android:layout_marginEnd="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/driver_vehicle_type"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:id="@+id/txtVehicleType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:text="STANDARD" />
                        </LinearLayout>

                            <!-- Distance -->
                            <LinearLayout
                                android:id="@+id/itemDistance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="14dp"
                                android:background="@drawable/bg_info_item"
                                android:layout_marginStart="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/driver_distance"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:id="@+id/txtDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:text="12.5 km" />
                        </LinearLayout>
                        </LinearLayout>

                        <!-- Row 2: Duration + Price -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp">

                            <!-- Duration -->
                            <LinearLayout
                                android:id="@+id/itemDuration"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="14dp"
                                android:background="@drawable/bg_info_item"
                                android:layout_marginEnd="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/driver_duration"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:id="@+id/txtDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:text="25 min" />
                        </LinearLayout>

                            <!-- Price -->
                            <LinearLayout
                                android:id="@+id/itemPrice"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="14dp"
                                android:background="@drawable/bg_info_item"
                                android:layout_marginStart="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/driver_price"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:id="@+id/txtPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:text="1,250 RSD" />
                        </LinearLayout>
                        </LinearLayout>

                        <!-- Row 3: Baby Transport + Pet Transport (conditional) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Baby Transport (conditional) -->
                            <LinearLayout
                                android:id="@+id/itemBabyTransport"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="14dp"
                                android:background="@drawable/bg_info_item"
                                android:layout_marginEnd="6dp"
                                android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/driver_baby_transport"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âœ“ Yes"
                                android:textColor="@color/accent_success"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                            <!-- Pet Transport (conditional) -->
                            <LinearLayout
                                android:id="@+id/itemPetTransport"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="14dp"
                                android:background="@drawable/bg_info_item"
                                android:layout_marginStart="6dp"
                                android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/driver_pet_transport"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âœ“ Yes"
                                android:textColor="@color/accent_success"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Passengers Section -->
                    <TextView
                        android:id="@+id/txtPassengersTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.08"
                        android:layout_marginBottom="12dp"
                        tools:text="PASSENGERS (2)" />

                    <LinearLayout
                        android:id="@+id/containerPassengers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp" />

                    <!-- Divider before actions -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginBottom="20dp" />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnStartRide"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="@string/driver_btn_start"
                            android:textAllCaps="true"
                            android:backgroundTint="@color/accent_success"
                            android:textColor="#000000"
                            android:layout_marginBottom="12dp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btnCompleteRide"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="@string/driver_btn_complete"
                            android:textAllCaps="true"
                            android:backgroundTint="@color/text_primary"
                            android:textColor="#000000"
                            android:layout_marginBottom="12dp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btnStopEarly"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="@string/driver_btn_stop_early"
                            android:textAllCaps="true"
                            android:backgroundTint="@color/btn_stop_early"
                            android:textColor="#FFFFFF"
                            android:layout_marginBottom="12dp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btnPanic"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="@string/driver_btn_panic"
                            android:textAllCaps="true"
                            android:backgroundTint="@color/btn_panic"
                            android:textColor="#FFFFFF"
                            android:layout_marginBottom="12dp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btnCancelRide"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="@string/driver_btn_cancel"
                            android:textAllCaps="true"
                            android:textColor="@color/accent_danger"
                            app:strokeColor="@color/accent_danger"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        app:srcCompat="@android:drawable/stat_notify_chat"
        app:tint="@color/text_primary"
        app:backgroundTint="@color/accent_info" />

    </FrameLayout>

</LinearLayout>
