<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="500dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_driver_title"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_driver_subtitle"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_driver_section_driver"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_surface"
                android:elevation="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/card_surface"
                    android:padding="24dp">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/add_driver_first_name" android:textColor="@color/text_primary"
                        android:textSize="12sp" android:layout_marginBottom="8dp" />
                    <EditText android:id="@+id/addDriverFirstName"
                        android:layout_width="match_parent" android:layout_height="48dp"
                        android:background="@color/bg_primary" android:hint="@string/add_driver_first_name_hint"
                        android:textColor="@color/text_primary" android:textColorHint="@color/text_subtle"
                        android:paddingStart="16dp" android:paddingEnd="16dp"
                        android:inputType="textPersonName" android:textSize="14sp" android:layout_marginBottom="20dp" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/add_driver_last_name" android:textColor="@color/text_primary"
                        android:textSize="12sp" android:layout_marginBottom="8dp" />
                    <EditText android:id="@+id/addDriverLastName"
                        android:layout_width="match_parent" android:layout_height="48dp"
                        android:background="@color/bg_primary" android:hint="@string/add_driver_last_name_hint"
                        android:textColor="@color/text_primary" android:textColorHint="@color/text_subtle"
                        android:paddingStart="16dp" android:paddingEnd="16dp"
                        android:inputType="textPersonName" android:textSize="14sp" android:layout_marginBottom="20dp" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/add_driver_email" android:textColor="@color/text_primary"
                        android:textSize="12sp" android:layout_marginBottom="8dp" />
                    <EditText android:id="@+id/addDriverEmail"
                        android:layout_width="match_parent" android:layout_height="48dp"
                        android:background="@color/bg_primary" android:hint="@string/add_driver_email_hint"
                        android:textColor="@color/text_primary" android:textColorHint="@color/text_subtle"
                        android:paddingStart="16dp" android:paddingEnd="16dp"
                        android:inputType="textEmailAddress" android:textSize="14sp" android:layout_marginBottom="20dp" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/add_driver_address" android:textColor="@color/text_primary"
                        android:textSize="12sp" android:layout_marginBottom="8dp" />
                    <EditText android:id="@+id/addDriverAddress"
                        android:layout_width="match_parent" android:layout_height="48dp"
                        android:background="@color/bg_primary" android:hint="@string/add_driver_address_hint"
                        android:textColor="@color/text_primary" android:textColorHint="@color/text_subtle"
                        android:paddingStart="16dp" android:paddingEnd="16dp"
                        android:inputType="textPostalAddress" android:textSize="14sp" android:layout_marginBottom="20dp" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/add_driver_phone" android:textColor="@color/text_primary"
                        android:textSize="12sp" android:layout_marginBottom="8dp" />
                    <EditText android:id="@+id/addDriverPhone"
                        android:layout_width="match_parent" android:layout_height="48dp"
                        android:background="@color/bg_primary" android:hint="@string/add_driver_phone_hint"
                        android:textColor="@color/text_primary" android:textColorHint="@color/text_subtle"
                        android:paddingStart="16dp" android:paddingEnd="16dp"
                        android:inputType="phone" android:textSize="14sp" android:layout_marginBottom="0dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_driver_section_vehicle"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_surface"
                android:elevation="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/card_surface"
                    android:padding="24dp">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/add_driver_vehicle_model" android:textColor="@color/text_primary"
                        android:textSize="12sp" android:layout_marginBottom="8dp" />
                    <EditText android:id="@+id/addDriverVehicleModel"
                        android:layout_width="match_parent" android:layout_height="48dp"
                        android:background="@color/bg_primary" android:hint="@string/add_driver_vehicle_model_hint"
                        android:textColor="@color/text_primary" android:textColorHint="@color/text_subtle"
                        android:paddingStart="16dp" android:paddingEnd="16dp"
                        android:inputType="text" android:textSize="14sp" android:layout_marginBottom="20dp" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/add_driver_vehicle_type" android:textColor="@color/text_primary"
                        android:textSize="12sp" android:layout_marginBottom="8dp" />
                    <Spinner android:id="@+id/addDriverVehicleType"
                        android:layout_width="match_parent" android:layout_height="48dp"
                        android:background="@color/bg_primary" android:paddingStart="16dp" android:paddingEnd="16dp"
                        android:layout_marginBottom="20dp" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/add_driver_license_plate" android:textColor="@color/text_primary"
                        android:textSize="12sp" android:layout_marginBottom="8dp" />
                    <EditText android:id="@+id/addDriverLicensePlate"
                        android:layout_width="match_parent" android:layout_height="48dp"
                        android:background="@color/bg_primary" android:hint="@string/add_driver_license_plate_hint"
                        android:textColor="@color/text_primary" android:textColorHint="@color/text_subtle"
                        android:paddingStart="16dp" android:paddingEnd="16dp"
                        android:inputType="textCapCharacters" android:textSize="14sp" android:layout_marginBottom="20dp" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/add_driver_seats" android:textColor="@color/text_primary"
                        android:textSize="12sp" android:layout_marginBottom="8dp" />
                    <EditText android:id="@+id/addDriverSeats"
                        android:layout_width="match_parent" android:layout_height="48dp"
                        android:background="@color/bg_primary" android:hint="@string/add_driver_seats_hint"
                        android:textColor="@color/text_primary" android:textColorHint="@color/text_subtle"
                        android:paddingStart="16dp" android:paddingEnd="16dp"
                        android:inputType="number" android:textSize="14sp" android:layout_marginBottom="20dp" />

                    <CheckBox android:id="@+id/addDriverBabyFriendly"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/add_driver_baby_friendly"
                        android:textColor="@color/text_primary" android:layout_marginBottom="12dp" />

                    <CheckBox android:id="@+id/addDriverPetFriendly"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/add_driver_pet_friendly"
                        android:textColor="@color/text_primary" android:layout_marginBottom="24dp" />

                    <TextView android:id="@+id/addDriverError"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:textColor="@color/accent_danger" android:textSize="12sp"
                        android:visibility="gone" android:layout_marginBottom="8dp" />

                    <TextView android:id="@+id/addDriverSuccess"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:textColor="@color/accent_success" android:textSize="12sp"
                        android:visibility="gone" android:layout_marginBottom="8dp" />

                    <Button android:id="@+id/addDriverSubmit"
                        android:layout_width="match_parent" android:layout_height="48dp"
                        android:text="@string/add_driver_submit"
                        android:textColor="@color/bg_primary" android:textStyle="bold"
                        android:textSize="14sp" android:background="@color/white"
                        android:textAllCaps="false" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
