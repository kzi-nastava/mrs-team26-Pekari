<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="800dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_management_title"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_management_subtitle"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginBottom="16dp" />

            <!-- Error Message -->
            <TextView
                android:id="@+id/txtError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_error"
                android:padding="12dp"
                android:textColor="@color/accent_danger"
                android:textSize="13sp"
                android:visibility="gone"
                android:layout_marginBottom="12dp" />

            <!-- Success Message -->
            <TextView
                android:id="@+id/txtSuccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_surface"
                android:padding="12dp"
                android:textColor="@color/accent_success"
                android:textSize="13sp"
                android:visibility="gone"
                android:layout_marginBottom="12dp" />

            <!-- Loading -->
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

            <!-- Drivers Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_management_drivers"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDrivers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:minHeight="80dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_user_management" />

            <TextView
                android:id="@+id/txtDriversEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_management_no_drivers"
                android:textColor="@color/text_tertiary"
                android:textSize="13sp"
                android:visibility="gone"
                android:padding="16dp" />

            <!-- Passengers Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_management_passengers"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPassengers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:minHeight="80dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_user_management" />

            <TextView
                android:id="@+id/txtPassengersEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_management_no_passengers"
                android:textColor="@color/text_tertiary"
                android:textSize="13sp"
                android:visibility="gone"
                android:padding="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="72dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
