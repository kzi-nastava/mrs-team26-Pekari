<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/bg_primary">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="600dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ride Details"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnClose"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Close"
                        android:minWidth="48dp" />
                </LinearLayout>

                <!-- Loading State -->
                <ProgressBar
                    android:id="@+id/progressDetail"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="24dp"
                    android:visibility="gone" />

                <!-- Error State -->
                <TextView
                    android:id="@+id/txtErrorDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="24dp"
                    android:textColor="@color/accent_danger"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!-- Content Container -->
                <LinearLayout
                    android:id="@+id/contentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- Map View -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <org.osmdroid.views.MapView
                            android:id="@+id/mapView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Status Badge -->
                    <TextView
                        android:id="@+id/txtDetailStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="COMPLETED"
                        android:textColor="@color/accent_success"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- Route Information -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="@color/card_surface">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Route"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/txtDetailPickup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pickup: Unknown"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:id="@+id/containerStops"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/txtDetailDropoff"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Dropoff: Unknown"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Ride Information -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="@color/card_surface">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ride Information"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/txtDetailCreated"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Created: --"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/txtDetailScheduled"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Scheduled: --"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:layout_marginBottom="2dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/txtDetailStarted"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Started: --"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/txtDetailCompleted"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Completed: --"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/txtDetailPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Price: 0 RSD"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/txtDetailDistance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Distance: 0 km"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/txtDetailDuration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Duration: 0 min"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/txtDetailVehicle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Vehicle: STANDARD"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/txtDetailOptions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Options: None"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Cancellation Details -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCancellation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="#331E1E"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cancellation Details"
                                android:textColor="@color/accent_danger"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/txtCancelledBy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cancelled by: --"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/txtCancelledAt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cancelled at: --"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/txtCancellationReason"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Reason: --"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Panic Alert -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardPanic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="#33FF4444"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="PANIC ALERT"
                                android:textColor="@color/accent_danger"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/txtPanickedBy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Activated by: --"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Driver Information -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardDriver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="@color/card_surface">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Driver Details"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/txtDetailDriver"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No driver info"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Passengers -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardPassengers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="@color/card_surface">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/txtPassengersHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Passengers"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <LinearLayout
                                android:id="@+id/containerPassengers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Ratings -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardRatings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="@color/card_surface"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ratings"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/txtDetailRatings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No ratings yet"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Inconsistency Reports -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardInconsistencies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="@color/card_surface"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Inconsistency Reports"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/txtDetailInconsistencies"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No reports"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
