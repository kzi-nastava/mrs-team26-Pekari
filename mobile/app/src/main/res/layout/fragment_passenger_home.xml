<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintWidth_max="800dp">

        <!-- Map - 40% height -->
        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:minHeight="180dp">

            <include
                android:id="@+id/includeMap"
                layout="@layout/view_ride_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <!-- Form -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/card_surface"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ride_order_pickup"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <include
                            android:id="@+id/includePickup"
                            layout="@layout/address_autocomplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/containerStops"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="8dp" />

                        <Button
                            android:id="@+id/btnAddStop"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ride_order_add_stop"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ride_order_dropoff"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="4dp" />

                        <include
                            android:id="@+id/includeDropoff"
                            layout="@layout/address_autocomplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ride_order_linked_passengers"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/card_surface">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editPassengerEmails"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/ride_order_linked_passengers_hint"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:textColor="@color/text_primary"
                                android:textColorHint="@color/text_secondary" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ride_order_vehicle_type"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/toggleVehicleType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:singleSelection="true"
                            app:selectionRequired="true">

                            <Button
                                android:id="@+id/btnVehicleStandard"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/ride_order_vehicle_standard"
                                android:textColor="@color/text_primary"
                                android:checked="true" />

                            <Button
                                android:id="@+id/btnVehicleVan"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/ride_order_vehicle_van"
                                android:textColor="@color/text_primary" />

                            <Button
                                android:id="@+id/btnVehicleLux"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/ride_order_vehicle_lux"
                                android:textColor="@color/text_primary" />
                        </com.google.android.material.button.MaterialButtonToggleGroup>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ride_order_schedule"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="4dp" />

                        <Button
                            android:id="@+id/btnSchedule"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Now"
                            android:textColor="@color/text_primary"
                            tools:text="Today, 15:00" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:gravity="center_vertical">

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/switchBaby"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ride_order_baby"
                                android:textColor="@color/text_primary" />

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/switchPet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:text="@string/ride_order_pet"
                                android:textColor="@color/text_primary" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnEstimate"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ride_order_estimate"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="8dp" />

                        <Button
                            android:id="@+id/btnRequestRide"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="@string/ride_order_request"
                            android:layout_marginTop="12dp"
                            style="@style/Widget.Material3.Button"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/txtError"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/accent_danger"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/layoutEstimate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/card_surface"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price Estimate"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/txtEstimatePrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/accent_success"
                                android:textSize="16sp"
                                android:layout_marginTop="4dp"
                                tools:text="500 RSD" />
                            <TextView
                                android:id="@+id/txtEstimateDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp"
                                tools:text="10 km" />
                            <TextView
                                android:id="@+id/txtEstimateDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp"
                                tools:text="20 min" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutOrderResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/card_surface"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ride Details"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/txtOrderStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/accent_success"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"
                                tools:text="ACCEPTED" />
                            <TextView
                                android:id="@+id/txtOrderMessage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp"
                                tools:text="Driver assigned" />
                            <TextView
                                android:id="@+id/txtOrderRideId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_tertiary"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                tools:text="Ride ID: 123" />
                            <TextView
                                android:id="@+id/txtOrderDriver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_tertiary"
                                android:textSize="12sp"
                                tools:text="Driver: driver@example.com" />

                            <Button
                                android:id="@+id/btnCancelRide"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cancel Ride"
                                android:layout_marginTop="12dp"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/btnRequestAnother"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Request Another Ride"
                                android:layout_marginTop="8dp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <Button
                    android:id="@+id/btnViewHistory"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_passenger_history"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="24dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
